      <!-- Main content -->
      <section class="content">
        <div class="box box-primary">
          <div class="box-header with-border">
            <h3 class="box-title">Assign Petugas</h3>
          </div>
          <!-- /.box-header -->
          <!-- form start -->
          <form role="form">
            <div class="box-body">
              <div class="form-group">
                <label for="exampleInputEmail1">Nama Petugas</label>
                <select class="form-control select2" style="width: 100%;">
                  <option selected="selected">Ahmad</option>
                  <option>Dedik</option>
                  <option>Nadjib</option>
                  <option>Jaelani</option>
                </select>

                <label>Tanggal Mulai:</label>
                <div class="input-group date">
                  <div class="input-group-addon">
                    <i class="fa fa-calendar"></i>
                  </div>
                  <input type="date" class="form-control pull-right" id="datepicker">
                </div>

                <label>Tanggal Selesai:</label>
                <div class="input-group date">
                  <div class="input-group-addon">
                    <i class="fa fa-calendar"></i>
                  </div>
                  <input type="date" class="form-control pull-right" id="datepicker2">
                </div>

                <label>Statsiun</label>
                <select class="form-control select2" style="width: 100%;">
                  <option selected="selected">Gambir</option>
                  <option>Pasar Senen</option>
                  <option>Manggarai</option>
                  <option>Jakarta Kota</option>
                  <option>Universitas Indonesia</option>
                  <option>Depok</option>
                </select>
              </div>
              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
          </form>


          <!-- Default box -->
          <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title">Tabel Penugasan</h3>
              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                  title="Collapse">
                  <i class="fa fa-minus"></i></button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip"
                  title="Remove">
                  <i class="fa fa-times"></i></button>
              </div>
            </div>
            <div class="box-body">
              <!-- /.box-header -->
              <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>No</th>
                      <th>Petugas</th>
                      <th>Tanggal mulai</th>
                      <th>Tanggal akhir</th>
                      <th>Stasiun</th>
                      <th>Action [admin]</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>1</td>
                      <td>Ahmad</td>
                      <td>21 Maret 2019</td>
                      <td>23 April 2019</td>
                      <td>Depok</td>
                      <td></td>
                    </tr>
                  </tbody>
                  <tfoot>
                </table>
              </div>
              <!-- /.box-body -->
            </div>
            <!-- /.box -->
      </section>
      <!-- /.content -->
  </div>
